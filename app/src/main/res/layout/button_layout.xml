<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <GridLayout
            android:id="@+id/calculatorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="5"
            android:background="@color/black"
            android:columnCount="4">

            <Button
                android:id="@+id/ac"
                android:text="AC"
                style="@style/Button1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"/>
            <Button
                android:id="@+id/clear"
                android:text="C"
                style="@style/Button1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"/>
            <Button
                android:id="@+id/percent"
                style="@style/Button1"
                android:text="%"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/division"
                style="@style/Button1"
                android:text="/"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn7"
                android:text="7"
                style="@style/Button1"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn8"
                style="@style/Button1"
                android:text="8"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn9"
                style="@style/Button1"
                android:text="9"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/multiply"
                style="@style/Button1"
                android:text="x"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn4"
                style="@style/Button1"
                android:text="4"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn5"
                style="@style/Button1"
                android:text="5"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn6"
                style="@style/Button1"
                android:text="6"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/subtract"
                style="@style/Button1"
                android:text="-"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn1"
                style="@style/Button1"
                android:text="1"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn2"
                style="@style/Button1"
                android:text="2"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn3"
                style="@style/Button1"
                android:text="3"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/add"
                style="@style/Button1"
                android:text="+"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btn0"
                style="@style/Button1"
                android:text="0"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnpoint"
                style="@style/Button1"
                android:text="."
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/equal"
                style="@style/Button1"
                android:text="="
                android:layout_row="4"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"/>

        </GridLayout>
</RelativeLayout>